<h1>TODO 리스트</h1>
<%= form_tag todos_path do %>
  <%= text_field_tag :item, nil, placeholder: "새로운 할 일", autofocus: true %>
  <%= submit_tag "추가" %>
<% end %>
<ul>
  <% @todos.each do |t| %>
    <li>
      <%= t.item %>
      <%= link_to '수정', edit_todo_path(t) %>
      <%= link_to '삭제', todo_path(t), method: :delete %>
    </li>
  <% end %>
</ul>
